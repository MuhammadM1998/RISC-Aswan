{
    "name": "risc-aswan",
    "description": "My graduation project landing page, a RISC-V RV32I core with pipelining and hazard unit.",
    "version": "1.0.0",
    "author": "MuhammadM1998",
    "repository": {
        "type": "git",
        "url": "https://github.com/MuhammadM1998/RISC-Aswan.git"
    },
    "license": "MIT",
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "source": "./src/index.html",
    "scripts": {
        "dev": "parcel --https --open firefox",
        "build": "npm run buildRelative && npm run updatePaths",
        "buildRelative": "parcel build --no-source-maps --public-url .",
        "updatePaths": "(Get-Content -Raw public/index.html) -replace 'src=\"', 'src=\"./' | Set-Content -NoNewLine public/index.html"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.2",
        "parcel": "^2.3.1",
        "postcss": "^8.4.6",
        "tailwindcss": "^3.0.18"
    },
    "dependencies": {
        "firebase": "^9.6.6",
        "vanilla-hamburger": "^0.2.3"
    },
    "alias": {
        "process": {
            "global": "{}"
        }
    }
}